nowDate = date()
nowWeekday = weekday(nowDate)
if nowWeekday = 1 then 
	echo nowDate & "   日"
end if
if nowWeekday = 2 then
	echo nowDate & "   月"
end if
if nowWeekday = 3 then
	echo nowDate & "   火"
end if
if nowWeekday = 4 then
	echo nowDate & "   水"
end if
if nowWeekday = 5 then
	echo nowDate & "   木"
end if
if nowWeekday = 6 then
	echo nowDate & "   金"
end if
if nowWeekday = 7 then
	echo nowDate & "   土"
end if

